name = input("Enter the student name:")

mark1 = float(input("Enter the mark for subject 1:"))
mark2 = float(input("Enter the mark for subject 2:"))
mark3 = float(input("Enetr the mark for subject 3:"))

total_mark = mark1 + mark2 + mark3
average_mark = total_mark / 3

print("Student name:", name)
print("Total mark:", total_mark)
print("Average mark:", average_mark)
